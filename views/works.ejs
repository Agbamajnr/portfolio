<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>My Works</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!--link css -->
	<link rel="stylesheet" type="text/css" href="./lib/fontawesome/css/all.min.css">
	<link rel="stylesheet" type="text/css" href="./fonts/THSarabunNew/thsarabun-new.css">
	<link rel="stylesheet" type="text/css" href="./css/works.css"> 
	<link rel="icon" type="favicon/jpg" href="./img/3.jpg">
</head>
<body>
	<!--header-->
	<header class="home">
		<a href="/" class="fas fa-angle-left home-button"></a>
		<h1 class="heading">my <span>works</span></h1>
	</header>



	<section class="works" id="works">

		<div class="box-container">
			<% if(works.length == 0 || works.length > 0) { %>
				<% works.forEach(work => { %>
				  <div class="box ">
					  <div class="content">
						  <h3><%= work.title %></h3>
						  <a href="<%= work.url %>" target="_blank" class="btn">view in browser</a>
					  </div>
				  </div>
				<% }) %>
			  <% } %>

			  <% if(works.length == 0 ) { %>
				<h1 style="font-size: 3rem; text-align: center; font-style: bold;" id="unavailable"> opps.. i just ran out of works..</h1>
			<% } %>

		</div>
	</section>


	<!--footer sec starts -->

	<div class="footer">
		<div class="s-media">
			<ul>
				<a class="fab fa-facebook-f" target="_blank" href="https://web.facebook.com/agbamajnr"></a>
				<a class="fab fa-instagram" target="_blank" href="https://www.instagram.com/agbamajnr/"></a>
				<a class="fab fa-github" target="_blank" href="https://github.com/Agbamajnr"></a>
				<a class="fab fa-linkedin" target="_blank" href="https://www.linkedin.com/in/agbama-ulimhunyie-ab28311b7/"></a>
				<a class="fab fa-stack-overflow" target="_blank" href="https://stackoverflow.com/users/16818224/agbama-jnr"></a>
				<a class="fab fa-twitter" target="_blank"></a>
			</ul></div>
		<div class="text">
			portfolio of <span>agbama akem</span>  | all rights resrved!
		</div>
	</div>


</body>
</html>